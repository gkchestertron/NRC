<% Page.all.each do |page| %>
	<%= link_to page.title, "/#pages/#{page.id}", class: 'navbar-brand' %>
<% end %>

<% if current_user %>
<%= link_to "Sign Out", session_url, method: "delete", class: 'navbar-brand' %>
<script>
	NRC.currentUser = new NRC.Models.User({ id: <%= current_user.id %> });
	NRC.currentUser.fetch();
</script>
<% else %>
	<%= link_to "Sign In", new_session_url, class: "navbar-brand" %>
<% end %>